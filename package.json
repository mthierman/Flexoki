{
    "name": "theme-flexoki",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "publisher": "mthierman",
    "engines": {
        "vscode": "*"
    },
    "license": "MIT",
    "displayName": "%display%",
    "description": "%description%",
    "categories": [
        "Themes"
    ],
    "keywords": [
        "theme",
        "flexoki",
        "dark",
        "light"
    ],
    "galleryBanner": {
        "color": "#FFFCF0",
        "theme": "light"
    },
    "contributes": {
        "themes": [
            {
                "label": "%darkRed%",
                "mode": "Dark",
                "accent": "Red",
                "uiTheme": "vs-dark",
                "path": "./themes/flexoki-dark-red-color-theme.json"
            },
            {
                "label": "%darkOrange%",

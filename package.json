    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mthierman/Flexoki.git"
    },
    "scripts": {
        "check": "tsc",
        "dev": "tsc && esbuild scripts/dev.ts --bundle --outdir=build --platform=node --format=esm --packages=external && node build/dev.js",
        "build": "tsc && esbuild scripts/build.ts --bundle --outdir=build --platform=node --format=esm --packages=external && node build/build.js",
        "vsce": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.11.25",
        "@vscode/vsce": "^2.24.0",
        "esbuild": "^0.20.1",
        "prettier": "^3.2.5",
        "typescript": "^5.4.2"
